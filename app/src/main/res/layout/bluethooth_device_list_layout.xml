<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apogee.registration.ui.deivcelist.BluetoothDeviceListFragment">


    <include
        android:id="@+id/action_layout"
        layout="@layout/action_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_ble"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_layout"
        tools:listitem="@layout/ble_device_item" />


    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/pb_ble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="@id/recycle_view_ble"
        app:layout_constraintLeft_toLeftOf="@id/recycle_view_ble"
        app:layout_constraintRight_toRightOf="@id/recycle_view_ble"
        app:layout_constraintTop_toTopOf="@id/recycle_view_ble" />


</androidx.constraintlayout.widget.ConstraintLayout>